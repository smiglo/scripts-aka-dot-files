#!/usr/bin/env bash
# vim: fdl=0

# Workaround for older bash # {{{
epochSeconds() { # {{{
  command date +%s
} # }}}
# }}}
# Check for OS/X # {{{
export IS_MAC=false
[[ $(uname) == 'Darwin' ]] && IS_MAC=true && export UNAME="$(uname)" && export USERLAND="GNU"
# }}}
# Check for MC # {{{
export IS_IN_MC=$( [[ $PPID != 0 && "$(ps -o comm= -p $PPID)" == "mc" ]] && echo 'true' || echo 'false')
if $IS_IN_MC; then
  export PROMPT_COMMAND=
  export PS1='\$ '
  export RCSTUFF_RUNTIME_INSTALLED=true
  return
fi # }}}
# Is installed # {{{
${RCSTUFF_RUNTIME_INSTALLED:-false} && [[ $1 != '--force' ]] && return 0
export RCSTUFF_RUNTIME_INSTALLED=true
[[ $1 == '--force' ]] && shift
# }}}
# Unicode extra chars # {{{
declare -A UNICODE_EXTRA_CHARS
UNICODE_EXTRA_CHARS[battery]="ðŸ”‹"
UNICODE_EXTRA_CHARS[bell]="ðŸ›Ž"
UNICODE_EXTRA_CHARS[romb]="âœ¦"
UNICODE_EXTRA_CHARS[docker]="ðŸŒ‹"
UNICODE_EXTRA_CHARS[dot-small]="â€¢"
UNICODE_EXTRA_CHARS[dot-medium]="âš«"
UNICODE_EXTRA_CHARS[dot-big]="ðŸŒ‘"
UNICODE_EXTRA_CHARS[disk]="ðŸ’¾"
UNICODE_EXTRA_CHARS[nested_bash]="â¶"
UNICODE_EXTRA_CHARS[envelope]="âœ‰ "
UNICODE_EXTRA_CHARS[exclamation]="â¢"
UNICODE_EXTRA_CHARS[extra_bar]="â—¼ "
UNICODE_EXTRA_CHARS[high_cpu]="âš› "
UNICODE_EXTRA_CHARS[home]="ðŸ¡"
UNICODE_EXTRA_CHARS[icon-ok]="âœ“"
UNICODE_EXTRA_CHARS[icon-err]="âœ—"
UNICODE_EXTRA_CHARS[link]="ðŸ”—"
UNICODE_EXTRA_CHARS[ll-pni]="â› "
UNICODE_EXTRA_CHARS[localhost]="ðŸ¤ "
UNICODE_EXTRA_CHARS[mic]="ðŸŽ¤"
UNICODE_EXTRA_CHARS[mute]="ðŸ”‡"
UNICODE_EXTRA_CHARS[padlock]="ðŸ”“"
UNICODE_EXTRA_CHARS[pause]="â¸ "
UNICODE_EXTRA_CHARS[play]="âº "
UNICODE_EXTRA_CHARS[power]="ðŸ”Œ"
UNICODE_EXTRA_CHARS[progress_bar]="â–â–ƒâ–„â–…â–†â–‡â–ˆâ–‡â–†â–…â–„â–ƒ"
UNICODE_EXTRA_CHARS[progress_dots]="â â ‚â ƒâ „â …â †â ‡â ˆâ ‰â Šâ ‹â Œâ â Žâ â â ‘â ’â “â ”â •â –â —â ˜â ™â šâ ›â œâ â žâ Ÿâ  â ¡â ¢â £â ¤â ¥â ¦â §â ¨â ©â ªâ «â ¬â ­â ®â ¯â °â ±â ²â ³â ´â µâ ¶â ·â ¸â ¹â ºâ »â ¼â ½â ¾â ¿â¡€â¡â¡‚â¡ƒâ¡„â¡…â¡†â¡‡â¡ˆâ¡‰â¡Šâ¡‹â¡Œâ¡â¡Žâ¡â¡â¡‘â¡’â¡“â¡”â¡•â¡–â¡—â¡˜â¡™â¡šâ¡›â¡œâ¡â¡žâ¡Ÿâ¡ â¡¡â¡¢â¡£â¡¤â¡¥â¡¦â¡§â¡¨â¡©â¡ªâ¡«â¡¬â¡­â¡®â¡¯â¡°â¡±â¡²â¡³â¡´â¡µâ¡¶â¡·â¡¸â¡¹â¡ºâ¡»â¡¼â¡½â¡¾â¡¿â¢€â¢â¢‚â¢ƒâ¢„â¢…â¢†â¢‡â¢ˆâ¢‰â¢Šâ¢‹â¢Œâ¢â¢Žâ¢â¢â¢‘â¢’â¢“â¢”â¢•â¢–â¢—â¢˜â¢™â¢šâ¢›â¢œâ¢â¢žâ¢Ÿâ¢ â¢¡â¢¢â¢£â¢¤â¢¥â¢¦â¢§â¢¨â¢©â¢ªâ¢«â¢¬â¢­â¢®â¢¯â¢°â¢±â¢²â¢³â¢´â¢µâ¢¶â¢·â¢¸â¢¹â¢ºâ¢»â¢¼â¢½â¢¾â¢¿â£€â£â£‚â£ƒâ£„â£…â£†â£‡â£ˆâ£‰â£Šâ£‹â£Œâ£â£Žâ£â£â£‘â£’â£“â£”â£•â£–â£—â£˜â£™â£šâ£›â£œâ£â£žâ£Ÿâ£ â£¡â£¢â££â£¤â£¥â£¦â£§â£¨â£©â£ªâ£«â£¬â£­â£®â£¯â£°â£±â£²â£³â£´â£µâ£¶â£·â£¸â£¹â£ºâ£»â£¼â£½â£¾â£¿"
UNICODE_EXTRA_CHARS[root]="â˜¢ "
UNICODE_EXTRA_CHARS[smart]="â“¢ "
UNICODE_EXTRA_CHARS[ssh]="ðŸš€"
UNICODE_EXTRA_CHARS[tmux_main]="ðŸŒ…"
UNICODE_EXTRA_CHARS[zoom_left]="ðŸ”"
